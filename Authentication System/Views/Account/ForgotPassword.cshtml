@model ForgotPasswordViewModel;
@{
    ViewData["Title"] = "Forgot Password";
    Layout = "~/Views/Shared/_MembershipLayout.cshtml";
}

<h1 class="text-center">Forgot Password</h1>

<div class="row col-sm-8 justify-content-center" style="margin: 0 auto;">
    <div class="col">
        <form asp-action="ForgotPassword">
            <div class="form-group">
                <label asp-for="Email" class="control-label my-3"></label>
                <input asp-for="Email" class="form-control" autofocus />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group my-3 d-flex justify-content-center">
                <input type="submit" value="Continue" class="btn btn-primary btn-block" />
            </div>
        </form>

        <div class="text-center">
            @if (Model?.IsSuccess == true)
            {
                <div class="alert alert-success" role="alert">
                    If you have registered with us, an email has been sent on your registered email id.<br />
                    Please refer to your email for further information to reset password.
                </div>
            }
            Back to
            <a asp-controller="Account" asp-action="Login" asp-area="" title="Sign in">Sign in</a>
        </div>
    </div>
</div>